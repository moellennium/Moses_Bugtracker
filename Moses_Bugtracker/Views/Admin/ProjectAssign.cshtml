
@{
    ViewBag.Title = "Project Assign";
}

<h2>Project Assign</h2>


<div class="container">

    <div class="row">
        <div class="col-md-6"><b><u>Choose Project</u></b></div>
        <div class="col-md-6"><b><u>Choose User(s)</u></b></div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6 text-center">
                @Html.DropDownList("ProjectId", null, "--Select--", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-6 text-center">
                @Html.ListBox("UserIds", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Assign</button>
            </div>
        </div>

    }
</div>