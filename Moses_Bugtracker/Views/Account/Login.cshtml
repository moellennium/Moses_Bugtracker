        <div class="row">
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>
            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <h1>Login Form</h1>
                            <div>
                                <input type="email" name="LVM.Email" class="form-control" placeholder="Email" required="" />
                            </div>
                            <div>
                                <input type="password" name="LVM.Password" class="form-control" placeholder="Password" required="" />
                            </div>
                            <div>
                                <button class="btn btn-default submit" type="submit">Log in</button>
                                <a class="reset_pass" href="#">Lost your password?</a>
                            </div>
                            <div class="clearfix"></div>
                            <div class="separator">
                                <p class="change_link">
                                    New to site?
                                    <a href="#signup" class="to_register"> Create Account </a>
                                </p>
                                <div class="clearfix"></div>
                                <br />
                                <div>
                                    <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                    <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                                </div>
                            </div>
                        }
                    </section>
                </div>
                <div id="register" class="animate form registration_form">
                    <section class="login_content">
                        
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            // we want to add additional controls so the person that is registering can enter information such as (FirstName, LastName etc....)
                            @Html.AntiForgeryToken()
                            <h4>Create a new account.</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.FirstName, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.RVM.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.LastName, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.RVM.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.DisplayName, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.RVM.DisplayName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.PhoneNumber, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.RVM.PhoneNumber, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.Email, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.RVM.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Select an Avatar", new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    <input type="file" name="avatar" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.Password, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.PasswordFor(m => m.RVM.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.RVM.ConfirmPassword, new { @class = "col-md-5 control-label" })
                                <div class="col-md-7">
                                    @Html.PasswordFor(m => m.RVM.ConfirmPassword, new { @class = "form-control" })
                                </div>


                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-7">
                                    <input type="submit" class="btn btn-default" value="Register" />
                                </div>
                            </div>
                        }

                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                Already a member ?
                                <a href="#signin" class="to_register"> Log in </a>
                            </p>
                           
                        </div>

                    </section>
                </div>
